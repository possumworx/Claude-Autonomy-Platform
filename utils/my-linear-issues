#!/bin/bash
# Quick access to Linear commands - wrapper around linear-helpers

# Handle both direct execution and symlink execution  
if [ -L "${BASH_SOURCE[0]}" ]; then
    REAL_SCRIPT_DIR="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
else
    SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
    REAL_SCRIPT_DIR="$SCRIPT_DIR"
fi

# Just call linear-helpers with my-issues
"$REAL_SCRIPT_DIR/linear-helpers" my-issues